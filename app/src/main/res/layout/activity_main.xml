<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/CuadroEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:ems="10"/>

    <requestFocus />

    <TextView
        android:id="@+id/Enunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Introduzca su nombre"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/Borrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Insertar"
        android:layout_alignBottom="@+id/Insertar"
        android:layout_alignRight="@+id/CuadroSalidas"
        android:text="Borrar"/>


    <EditText
        android:id="@+id/CuadroSalidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CuadroEntrada"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="textMultiLine">
    </EditText>

    <Button
        android:id="@+id/Insertar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CuadroEntrada"
        android:layout_below="@+id/CuadroEntrada"
        android:layout_marginTop="19dp"
        android:text="Insertar"/>
</RelativeLayout>